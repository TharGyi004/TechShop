<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TechShop Mobile</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Promotions">Promotions</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="cart_img">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="text-center">
                                <a asp-area="" asp-controller="Cart" asp-action="Index">
                                    <img src="~/images/shopping-cart.png" width="30px" height="30px" alt="Cart" />
                                </a>
                            </td>
                            <td class="text-center">
                                <div class="dropdown" id="profileDropdown">
                                    <a href="javascript:void(0)">
                                        <img src="~/images/profile-user.png" width="30px" height="30px" alt="Profile" />
                                    </a>
                                    <div class="dropdown-menu">
                                        <a asp-controller="Login" asp-action="Index" class="LR-link">Login</a><hr />
                                        <a asp-controller="Register" asp-action="Index" class="LR-link">Register</a>
                                    </div>
                                </div>
                            </td>
						</tr>
                    </table>
                </div>
            </div>
        </nav>
    </header>
    @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@
    <main class="1">
        @RenderBody()
    </main>

    <footer class="border-top text-muted bg-light py-4">
        <div class="container">
            <div class="row">
                <!-- Contact Info -->
                <div class="col-md-6">
                    <h5 class="mb-3">Contact Us</h5>
                    <p class="mb-1">
                        <strong>Address:</strong> No. 123, Main Road, Yangon, Myanmar
                    </p>
                    <p class="mb-1">
                        <strong>Phone:</strong> <a href="tel:+959123456789">+95 9 123 456 789</a>
                    </p>
                    <p class="mb-1">
                        <strong>Email:</strong> <a href="mailto:info@techshop.com">info@techshop.com</a>
                    </p>
                </div>

                <!-- Viber QR Code -->
                <div class="col-md-6 text-md-end text-center">
                    <h5 class="mb-3">Chat with us on Viber</h5>
                    <img src="~/images/V1.jpg" alt="Viber QR Code" style="max-width:150px; border: 1px solid #ddd; border-radius: 8px;" />
                </div>
            </div>

            <hr />
            <div class="text-center small">
                &copy; 2025 - TechShop Mobile - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<script>
    const dropdown = document.getElementById('profileDropdown');

    dropdown.addEventListener('click', function () {
        this.classList.toggle('show');
    });

    // Close dropdown when clicking outside
    window.addEventListener('click', function (e) {
        if (!dropdown.contains(e.target)) {
            dropdown.classList.remove('show');
        }
    });
</script>

    

